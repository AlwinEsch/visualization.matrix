<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="visualization.matrix"
  version="0.0.1"
  name="Matrix"
  provider-name="Team Kodi">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="xbmc.player.musicviz"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Matrix inspired visualization for Kodi.</summary>
    <description lang="en">This music visualization is inspired by the movie "Matrix". It features six presets.</description>
    <platform>@PLATFORM@</platform>
    <assets>
      <icon>resources/icon.jpg</icon>
      <fanart>resources/fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
